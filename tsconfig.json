{
	"compilerOptions": {
		"outDir": "./public",
		"module": "esnext",
		"jsx": "react",
		"noImplicitAny": false, // this is overkill
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"_src/*": [
				"*"
			],
			"_components/*": [
				"tsx/components/*"
			],
			"_assets/*": [
				"assets/*"
			],
			"_scss/*": [
				"scss/*"
			],
		}
	}
}