{
	"name": "@vis97c/react-typescript-webpack-template",
	"version": "1.0.0",
	"description": "Template for a react-typescript spa usign webpack",
	"main": "public/js/app.js",
	"source": "src/tsx/index.tsx",
	"author": "@vis97c",
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack",
		"dev": "cross-env NODE_ENV=development webpack",
		"watch": "webpack-dev-server"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/core": "^7.7.4",
		"@babel/plugin-proposal-class-properties": "^7.7.4",
		"@babel/plugin-proposal-json-strings": "^7.7.4",
		"@babel/plugin-syntax-dynamic-import": "^7.7.4",
		"@babel/plugin-syntax-import-meta": "^7.7.4",
		"@babel/preset-env": "^7.7.4",
		"@babel/preset-react": "^7.8.3",
		"@types/react": "^16.9.20",
		"@types/react-dom": "^16.9.5",
		"@types/webpack": "^4.41.6",
		"@typescript-eslint/eslint-plugin": "^2.20.0",
		"@typescript-eslint/parser": "^2.20.0",
		"autoprefixer": "^9.7.4",
		"babel-eslint": "^10.0.3",
		"babel-loader": "^8.0.6",
		"copy-webpack-plugin": "^5.0.5",
		"cross-env": "^5.2.0",
		"css-loader": "^2.1.1",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-react": "^7.18.3",
		"glob-all": "^3.1.0",
		"html-beautify-webpack-plugin": "^1.0.5",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.7",
		"mini-css-extract-plugin": "^0.6.0",
		"node-sass": "^4.13.0",
		"optimize-css-assets-webpack-plugin": "^5.0.3",
		"postcss": "^7.0.27",
		"postcss-combine-media-query": "^1.0.0",
		"postcss-custom-properties": "^9.0.2",
		"prettier": "1.19.1",
		"purgecss-webpack-plugin": "^1.6.0",
		"sass-loader": "^8.0.0",
		"style-loader": "^1.1.3",
		"stylelint": "^13.0.0",
		"stylelint-config-prettier": "^8.0.1",
		"stylelint-prettier": "^1.1.2",
		"terser-webpack-plugin": "^2.2.2",
		"ts-loader": "^6.2.1",
		"typescript": "^3.7.5",
		"webpack": "^4.30.0",
		"webpack-cli": "^3.3.0",
		"webpack-dev-server": "^3.3.1",
		"webpack-notifier": "^1.8.0"
	},
	"dependencies": {
		"@types/jquery": "^3.3.32",
		"@types/react-router-dom": "^5.1.3",
		"@types/react-transition-group": "^4.2.3",
		"core-js": "3",
		"es6-promise": "^4.2.8",
		"intersection-observer": "^0.7.0",
		"jquery": "^3.4.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-router-dom": "^5.1.2",
		"react-transition-group": "^4.3.0"
	},
	"resolutions": {
		"webpack-notifier/node-notifier": "6.0.0"
	},
	"browserslist": [
		"defaults",
		"not ie < 11",
		"last 2 versions",
		"> 1%",
		"iOS 7",
		"last 3 iOS versions"
	],
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js, jsx, ts, tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.css": [
			"stylelint --fix",
			"prettier --write"
		],
		"*.scss": [
			"stylelint --syntax=scss --fix",
			"prettier --write"
		]
	},
	"prettier": {
		"printWidth": 120,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"endOfLine": "auto",
		"htmlWhitespaceSensitivity": "ignore",
		"requirePragma": true,
		"insertPragma": true
	},
	"stylelint": {
		"extends": [
			"stylelint-prettier/recommended"
		],
		"rules": {
			"indentation": null
		}
	}
}